{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "corla/*": ["./src/*"],
        },

        "outDir": "./dist/",
        "sourceMap": true,

        // Strictness options
        "allowUnreachableCode": false,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "strictNullChecks": true,

        "lib": [
            "dom",
            "es5",
            "es2015",
            "esnext",
        ],

        "module": "commonjs",
        "target": "es5",
        "jsx": "react"
    },

    "files": [
        "./declarations.d.ts",
        "./node_modules/@types/webpack-env/index.d.ts"
    ],

    "include": [
        "./src/**/*"
    ]
}
